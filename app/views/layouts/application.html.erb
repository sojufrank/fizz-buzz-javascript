var fizzBuzz = function(x,y) {
  var fbreturn = [];
    for (i = x; i <= y; i++) {
        if (i % 3 === 0 && i % 5 === 0) {
            fbreturn += "<h1 class='fa-spin fa-5x " + color(1,10) + " " + font(1,10) + "'><strong>Fizz Buzz</strong></h1>" +"<br>";
        } 
        else if (i % 3 === 0) {
            fbreturn += "<h2" + " class= ' " + color(1,10) + " " + font(1,10) + "'> Fizz</h2>" +"<br>";
        } 
        else if (i % 5 === 0) {
            fbreturn += "<h2" + " class= ' " + color(1,10) + " " + font(1,10) + "'> Buzz</h2>" +"<br>";
        } 
        else {
            fbreturn += "<h2" + " class= ' " + color(1,10) + " " + font(1,10) + "'>" +i+ " </h2>" +"<br>";
        } 
    }
    return fbreturn;
}

