<script>

var random = function(){
  return Math.floor(Math.random() * 10);
}

var random2 = function(x,y){
  return Math.floor(Math.random() *(y-x)+x);
}


var color = function(){
  if(random() < 1){
    return "red";
  }
  else if(random() < 2){
    return "blue";
  }
  else if(random() < 3){
    return "black";
  }
  else if(random() < 4){
    return "white";
  }
  else if(random() < 5){
    return "yellow";
  }
  else if(random() < 6){
    return "pink";
  }
  else if(random() < 7){
    return "violet";
  }
  else if(random() < 8){
    return "orange";
  }
  else if(random() < 9){
